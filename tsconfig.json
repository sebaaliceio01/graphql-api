{
  "compilerOptions": {
    "lib": ["es5", "es6", "es2018", "esnext.asynciterable"],
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": "./",
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": false
  },
  "include": ["src/**/*", "functions/**/*"],
  "exclude": []
}
